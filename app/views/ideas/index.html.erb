<p id="notice"><%= notice %></p>

<h1>Ideas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><a class="example-image-link btn btn-default" href="<%= idea.picture.url %>" data-lightbox="example-set" data-title="Click the right half of the image to move forward.">Show picture</a></td>
        <td><%= link_to 'Show', idea, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_idea_path(idea), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Idea', new_idea_path %>
